---
import Layout from "@/layouts/Layout.astro";
import { ServicesForm } from "@/components/ServicesForm";

import { Image, getImage } from "astro:assets";
import formImage from "../images/headway-5QgIuuBxKwM-unsplash.jpg";

import { Icon } from "astro-icon";

const headingClasses =
  "sm:text-3xl text-2xl font-medium title-font text-emphasis mb-4";

const benefits = [
  {
    label: "SLA-driven availability",
  },
  {
    label: "Mentorship",
  },
  {
    label: "Architecture discussions",
  },
  { label: "Code Review" },
  { label: "CI/CD implementation" },
  { label: "Upgrade Assistance" },
];
---

<Layout title="Services | Vexilla">
  <main
    id="main"
    class="flex-auto flex flex-col gap-[4rem] main-content pt-10 pb-10 px-4 w-screen md:w-full"
    data-pagefind-body
  >
    <section class="text-gray-600 body-font">
      <div
        class="container mx-auto flex px-5 pt-24 md:flex-row flex-col items-center"
      >
        <div
          class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center"
        >
          <h1
            class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900"
          >
            Enterprise Services
          </h1>
          <p class="mb-8 leading-relaxed">
            Let our team help you get up and running as quickly as possible.
          </p>
          <div class="flex justify-center">
            <a
              href="#contact"
              class="inline-flex text-white bg-primary-500 border-0 py-2 px-6 hover:bg-primary-600 rounded text-lg"
            >
              Contact Us
            </a>
          </div>
        </div>
        <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
          <Image
            class="object-cover object-center rounded"
            src={formImage}
            width={600}
            alt="Generic image of people in a meeting"
          />
        </div>
      </div>
    </section>
    <section
      class="body-font flex flex-col md:flex-row gap-4 items-center text-gray-600"
    >
      <div class="md:w-1/2">
        <h2 class={headingClasses}>What's the deal?</h2>
        <p>
          While Vexilla is completely free and open-source, integrating it into
          your application and processes can take some time. This is especially
          true if you haven't worked with runtime configurable feature flags
          before.
        </p>
        <!-- <a href="#contact">Contact us</a> -->
      </div>
      <div class="md:w-1/2 md:pt-12">
        <ul class="flex flex-col gap-2">
          {
            benefits.map((benefit) => (
              <li class="flex flex-row list-none gap-4 items-center">
                <div class="flex-shrink-0 w-8 h-8 bg-slate-100 text-primary-500 rounded-full inline-flex items-center justify-center p-2">
                  <Icon name="phosphor/duotone/check-fat-duotone" />
                </div>
                {benefit.label}
              </li>
            ))
          }
        </ul>
      </div>
    </section>
    <section class="flex md:flex-row items-center justify-center text-gray-600">
      <div class="md:w-1/2 p-4">
        <h2 class={headingClasses}>Get In Touch!</h2>
        <ServicesForm client:only="react" />
        <noscript>
          The form requires JavaScript to function. You can email us at:
          services [at] vexilla [dot] com
        </noscript>
      </div>
    </section>
  </main>
</Layout>
