{
  "name": "vexilla/client",
  "description": "A client for the Vexilla Feature Flag System",
  "type": "library",
  "license": "BUSL-1.1",
  "authors": [
    {
      "name": "Chris Griffing",
      "email": "cmgriffing@gmail.com"
    }
  ],
  "require": {
    "ext-mbstring": "*",
    "nesbot/carbon": "^2.71.0",
    "pcov/clobber": "^2.0"
  },
  "require-dev": {
    "php": "^7.4",
    "phpunit/phpunit": "^9.3.5"
  },
  "autoload": {
    "psr-4": {
      "Vexilla\\": "src/"
    },
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Vexilla\\": "src/",
      "Vexilla\\Tests\\": "tests/"
    },
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --verbose --bootstrap vendor/autoload.php tests/*.php"
    ],
    "test:hasher": [
      "./vendor/bin/phpunit --verbose --bootstrap vendor/autoload.php tests/HasherTest.php"
    ],
    "coverage": [
      "composer exec phpunit -- --coverage-text --coverage-filter src/**/*.php --verbose --bootstrap vendor/autoload.php tests/*.php"
    ]
  }
}
